<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/matchParent"
    android:background="@color/colorBackground"
    tools:context="com.trade.book.booktrade.fragments.introfragments.intro3Fragment">



    <LinearLayout
        style="@style/wrapContent"
        android:id="@+id/intro3DetailsConatiner"
        android:layout_width="match_parent"
        android:padding="@dimen/sixteen"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/wrapContent"
            android:layout_marginRight="@dimen/sixteen"
            android:orientation="vertical">

            <ImageView
                style="@style/wrapContent"
                android:layout_marginBottom="@dimen/sixteen"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_phone_black_48dp" />

            <ImageView
                style="@style/wrapContent"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_home_black_48dp" />

        </LinearLayout>




        <LinearLayout
            style="@style/wrapContent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <EditText
                style="@style/wrapContent"
                android:layout_width="match_parent"
                android:id="@+id/intro3Phoneno"
                android:inputType="phone"
                android:layout_marginBottom="@dimen/sixteen"
                android:hint="Phone no"
                android:src="@drawable/ic_phone_white_48dp" />

            <EditText
                style="@style/wrapContent"
                android:layout_width="match_parent"
                android:id="@+id/intro3Address"
                android:hint="Address"
                android:src="@drawable/ic_home_white_48dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/wrapContent"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_margin="@dimen/sixteen"
        android:fontFamily="sans-serif-thin"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_above="@id/intro3DetailsConatiner"
        android:textColor="@color/colorAccent"
        android:text="Just few more Details"/>

</RelativeLayout>
