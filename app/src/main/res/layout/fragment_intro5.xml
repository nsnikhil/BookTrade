<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trade.book.booktrade.fragments.introfragments.intro5Fragment">

    <include layout="@layout/background"/>

    <TextView
        style="@style/wrapContent"
        android:layout_gravity="center"
        android:id="@+id/intro5LocateText"
        android:layout_margin="@dimen/sixteen"
        android:fontFamily="sans-serif-light"
        android:layout_centerInParent="true"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_above="@id/intro3DetailsConatiner"
        android:textColor="@color/colorAccent"
        android:text="@string/introPermission"/>

    <Button
        style="@style/wrapContent"
        android:id="@+id/intro5GrantText"
        android:text="@string/grantpermission"
        android:layout_below="@id/intro5LocateText"
        android:layout_centerHorizontal="true"
        android:theme="@style/buttonClr"
        android:textColor="@color/colorBackground"
        android:padding="@dimen/sixteen"
        android:layout_margin="@dimen/sixteen"
        android:layout_height="wrap_content"/>

</RelativeLayout>
