<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.trade.book.booktrade.fragments.introfragments.intro1Fragment">

    <LinearLayout
        style="@style/wrapContent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:contentDescription="@string/ImageDescriptionBackground"
            android:layout_width="200dp"
            android:id="@+id/intro1Image"
            android:layout_gravity="center"
            android:src="@drawable/launcher_logo"
            android:layout_height="200dp" />

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/intro1Text"
            android:text="@string/app_name"
            style="@style/wrapContent"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorAccent"
            android:textSize="50sp"/>

    </LinearLayout>

</RelativeLayout>
