<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/verticalLinearLayout"
    tools:context="com.trade.book.booktrade.fragments.dialogfragments.dialogFragmentGetLocation">

    <ImageView
        android:contentDescription="@string/ImageDescriptionBackground"
        style="@style/wrapContent"
        android:visibility="gone"
        android:id="@+id/locationStatusImage"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/happy"/>


    <TextView
        style="@style/wrapContent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/locationStatus"
        android:layout_margin="@dimen/sixteen"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:text="@string/dialogLocationStatus"/>

</LinearLayout>
